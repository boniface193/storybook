<section id="content-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <p>Dashboard</p>
            <h2 class="content-title mb-4">Welcome {{firstName}}</h2>
            <span class="chip size1"> Here are your stories... </span>

            {{#if stories}}
            <table class="table table-borderless table-striped my-4">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each stories}}
                    <tr>
                        <td>
                            <a href="/story/{{_id}}" class="text-decoration-none">
                                {{title}}</a>
                        </td>
                        <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                        <td>{{status}}</td>
                        <td>
                            {{> _modal }}
                            <a href="/edit/{{_id}}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button class="btn btn-danger btn-sm ml-3" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <p>You have not created any stories</p>
            {{/if}}
        </div>
    </div>
    {{> _add_btn}}
</section>